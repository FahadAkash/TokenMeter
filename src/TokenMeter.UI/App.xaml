<Application x:Class="TokenMeter.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:TokenMeter.UI.Converters"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Standard MaterialDesignThemes -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Indigo" />
            </ResourceDictionary.MergedDictionaries>

            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:ProviderToUrlConverter x:Key="ProviderToUrlConverter"/>
            <converters:HexToBrushConverter x:Key="HexToBrushConverter"/>

            <!-- Refined Catppuccin Macchiato Base Colors -->
            <SolidColorBrush x:Key="CatBase" Color="#24273A"/>
            <SolidColorBrush x:Key="CatMantle" Color="#1E2030"/>
            <SolidColorBrush x:Key="CatCrust" Color="#181926"/>
            <SolidColorBrush x:Key="CatSurface0" Color="#363A4F"/>
            <SolidColorBrush x:Key="CatSurface1" Color="#494D64"/>
            <SolidColorBrush x:Key="CatText" Color="#CAD3F5"/>
            <SolidColorBrush x:Key="CatSubtext" Color="#A5ADCB"/>
            <SolidColorBrush x:Key="CatBlue" Color="#8AADF4"/>
            <SolidColorBrush x:Key="CatGreen" Color="#A6DA95"/>
            <SolidColorBrush x:Key="CatRed" Color="#ED8796"/>
            <SolidColorBrush x:Key="CatMauve" Color="#C6A0F6"/>
            <SolidColorBrush x:Key="CatPeach" Color="#F5A191"/>

            <!-- Theme Overrides for MaterialDesign -->
            <SolidColorBrush x:Key="MaterialDesignPaper" Color="#24273A" />
            <SolidColorBrush x:Key="MaterialDesignBackground" Color="#1E2030" />
            <SolidColorBrush x:Key="MaterialDesignBody" Color="#CAD3F5" />
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#8AADF4" />
            <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#C6A0F6" />

            <Style x:Key="HeaderStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource CatText}"/>
                <Setter Property="FontFamily" Value="Segoe UI Variable Display, Segoe UI"/>
            </Style>

            <Style x:Key="SubtextStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="{DynamicResource CatSubtext}"/>
                <Setter Property="FontFamily" Value="Segoe UI Variable Text, Segoe UI"/>
            </Style>

            <!-- Premium Input Style -->
            <Style x:Key="PremiumTextBox" TargetType="{x:Type TextBox}">
                <Setter Property="Height" Value="54"/>
                <Setter Property="Padding" Value="16,14"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Background" Value="{DynamicResource CatCrust}"/>
                <Setter Property="Foreground" Value="{DynamicResource CatText}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="materialDesign:TextFieldAssist.HasClearButton" Value="True"/>
                <Setter Property="materialDesign:TextFieldAssist.PrefixText" Value="🔑 "/>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="{DynamicResource CatBlue}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Premium Action Button -->
            <Style x:Key="AuthActionButton" TargetType="{x:Type Button}">
                <Setter Property="Height" Value="32"/>
                <Setter Property="Padding" Value="16,0"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
